@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<ComponentViewModel>

<div class="d-flex flex-column">
    @foreach (var component in Model)
    {
        <div class="card mb-3">
            <div class="card-body d-flex align-items-center">
                <img src="@Url.Content(component.Icon)" class="mr-3" alt="Изображение 1">
                <div>
                    <div class="alert alert-info" role="alert">
                        @component.Name
                    </div>
                    <div>
                        <a href="@Url.Action("Details", "Component", new {id = component.Id})" class="btn btn-primary mr-3">Открыть</a>
                        <a href="@Url.Action("Edit", "Component", new {id = component.Id})" class="btn btn-primary mr-3">Изменить</a>
                        <a href="@Url.Action("Delete", "Component")" class="btn btn-primary mr-3">Удалить</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
