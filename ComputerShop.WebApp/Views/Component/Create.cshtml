@model ComponentViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4>Добавить</h4>
    </div>
    <div class="modal-body">
        <form asp-action="Create" asp-controller="Component" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="createName" class="form-label">Название</label>
                <input type="text" class="form-control" id="createName" asp-for="Name">
            </div>
            <div class="form-group mb-3">
                <label for="createDescription" class="form-label">Описание</label>
                <input type="text" class="form-control" id="createDescription" asp-for="Description">
            </div>
            <div class="form-group mb-3">
                <label for="createCoast" class="form-label">Цена</label>
                <input type="text" class="form-control" id="createCoast" asp-for="Coast">
            </div>
            <div class="form-group">
                <input type="submit" class="btn-primary" value="Добавить" />
            </div>
        </form>
    </div>
</div>