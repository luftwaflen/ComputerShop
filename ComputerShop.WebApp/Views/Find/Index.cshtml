@model FindViewModel
@{
    ViewData["Title"] = "Find";
    var findedComponents = (List<ComponentViewModel>)ViewData["Components"];
}
<h3>Find</h3>

<div class="row">
    <div class="col">

        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Description</th>
                <th>Coast</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var component in findedComponents)
            {
                <tr>
                    <td>
                        <img src="@component.ImageUrl" alt="@component.Name" width="50" height="50"/>
                    </td>
                    <td>@component.Name</td>
                    <td>@component.Description</td>
                    <td>@component.Coast</td>
                    <td>
                        <div>
                            <button type="button" class="btn btn-primary mr-3">
                                @Html.ActionLink("Открыть", "Details", "Component", new { id = component.Id })
                            </button>
                            <button type="button" class="btn btn-primary mr-3">
                                @Html.ActionLink("Изменить", "Edit", "Component", new { id = component.Id }, new { @class = "compEdit" })
                            </button>
                            <a class="btn btn-primary mr-3" href="@Url.Action("Delete", "Component", new { id = component.Id })">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col">
        <form asp-action="Index" asp-controller="Find" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="createName" class="form-label">Название</label>
                <input type="text" class="form-control" value=@Model.Name id="createName" asp-for="Name">
            </div>
            <div class="form-group mb-3">
                <label for="createDescription" class="form-label">Цена</label>
                <input type="text" class="form-control" value=@Model.CoastFrom id="createDescription" asp-for="CoastFrom">
                <input type="text" class="form-control" value=@Model.CoastTo id="createDescription" asp-for="CoastTo">
            </div>
            <div class="form-group">
                <input type="submit" class="btn-primary" value="Найти"/>
            </div>
        </form>
    </div>
</div>