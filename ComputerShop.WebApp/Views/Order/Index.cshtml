@model IEnumerable<OrderViewModel>

@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}

<h2>Orders</h2>
<div class="d-flex flex-column">

    <table class="table">
        <thead>
        <tr>
            <th>Order number</th>
            <th>Coast</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Coast</td>
                <td>
                    <a class="btn btn-primary mr-3" href="@Url.Action("Delete", "Order", new { id = order.Id })">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>